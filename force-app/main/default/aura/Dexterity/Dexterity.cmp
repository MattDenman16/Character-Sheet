<aura:component controller ='getMyID' implements="flexipage:availableForRecordHome,force:hasRecordId">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="Dexterity" type="String"/>
    <aura:attribute name="Equipment" type="String"/>
    <div class="demo-only demo-only--sizing slds-grid slds-wrap">
	<div class="slds-size_1-of-3">
	<lightning:recordEditForm recordId='{!v.Dexterity}' objectApiName='Dexterity__c'>
        <lightning:messages/>
        <div class='slds-card'>
        	<div class="slds-card__header slds-grid">
        		<p>Dexterity</p>
            </div>
        <div class='slds-grid slds-wrap'>
            <div class='slds-col slds-size_1-of-2'>
                <lightning:inputfield fieldName='Saving_Throws__c'/>
                <lightning:inputfield fieldName='Acrobatics__c'/>
                <lightning:inputfield fieldName='Sleight_of_hand__c'/>
                <lightning:inputfield fieldName='Stealth__c'/>
            </div>
        </div>
		<lightning:button class='slds-m-top_small' variant='brand' type='submit' name='update' label='Update'/>
      </div>
            </lightning:recordEditForm>
        </div>
        <div class="slds-size_2-of-3">
    <lightning:recordEditForm recordId='{!v.Equipment}' objectApiName='Equipment__c'>
        <lightning:messages/>
        <div class='slds-card' >
            <div class='slds-col slds-box_x-large slds-size_2-of-3'>
                <lightning:inputfield fieldName='Name'/>
     
            </div>
                <lightning:button class='slds-m-top_small' variant='brand' type='submit' name='update' label='Update'/>

        </div>
    	
    </lightning:recordEditForm>
    </div>
    </div>
</aura:component>