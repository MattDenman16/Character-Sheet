<aura:component controller="wisdomApexClass" implements="flexipage:availableForRecordHome,force:hasRecordId">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="Perception" type="String"/>
    <aura:attribute name="Survival" type="String"/>
                                                                 
    
    <div class="demo-only demo-only--sizing slds-grid slds-wrap">
    <div class="slds-size_1-of-3">
	<lightning:recordEditForm recordId='{!v.Perception}' objectApiName='Wisdom__c'>
        <lightning:messages/>
                <div class='slds-card'>

            <div class="slds-card__header slds-grid">
                 <div class='slds-text-title_caps' style='font-weight: bold'><p>Wisdom&nbsp;|&nbsp;</p></div>
                        <lightning:outputfield fieldName='Stat__c' variant='label-hidden'/>
            </div>
        <div class='slds-grid slds-wrap'>
            <div class='slds-col slds-size_1-of-2'>
                <lightning:inputfield fieldName='Saving_Throws__c'/>
                <lightning:inputfield fieldName='Animal_Handling__c'/>
                <lightning:inputfield fieldName='Insight__c'/>
                <lightning:inputfield fieldName='Medicine__c'/>
                <lightning:inputfield fieldName='Perception__c'/>
                <lightning:inputfield fieldName='Survival__c'/>
            </div>
        </div>
		<lightning:button class='slds-m-top_small' variant='brand' type='submit' name='update' label='Update'/>
        </div>
        </lightning:recordEditForm>
    </div>
    <div class="slds-size_2-of-3">
    <lightning:recordEditForm recordId='{!v.Survival}' objectApiName='CSheet__c'>
        <lightning:messages/>
        <div class='slds-card'>
            <div class='slds-col slds-size_2-of-3'>
                <lightning:inputfield fieldName='Weapon_Armor_Prof__c'/>
            </div>
                <lightning:button class='slds-m-top_small' variant='brand' type='submit' name='update' label='Update'/>
        </div>
    	
    </lightning:recordEditForm>
    </div>
    </div>
</aura:component>